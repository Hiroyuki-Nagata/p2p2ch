# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /bbsmenu.html               controllers.Application.bbsmenu
GET     /index.html                 controllers.Application.bbstable
GET     /bbstable.html              controllers.Application.bbstable
GET     /bbs/                       controllers.Application.bbsindex
GET     /bbs/subject.txt            controllers.Application.subject
GET     /bbs/dat/0.dat              controllers.Application.information
GET     /bbs/dat/:dat               controllers.Application.showThread(dat: String)
GET     /bbs/SETTING.TXT            controllers.Assets.at(path="/public", file="SETTING.TXT")
POST    /test/bbs.cgi               controllers.Application.writeThread
GET     /statusgraph/               controllers.Application.showStatusImage
GET     /statusgraph/refr           controllers.Application.showStatusImageWithRefresh(interval: Int = 30)
GET     /statusgraph/refr           controllers.Application.showStatusImageWithRefresh(interval: Int)
GET     /statusgraph/realtime       controllers.Application.statusGraphRealtime
GET     /statusgraph/comet          controllers.Application.statusGraphComet
